// Test: Function return values
// This test demonstrates functions that return values of different types

// Function that returns an integer
function add_numbers(a, b) {
    return a + b
}

// Function that returns a string
function greet(name) {
    return "Hello, " + name
}

// Function that returns a float
function calculate_area(radius) {
    return 3.14159 * radius * radius
}

// Function that returns a boolean
function is_adult(age) {
    return age >= 18
}

// Test integer return
var sum = add_numbers(5, 10)
display("Sum: ")
display(sum)

// Test string return
var greeting = greet("World")
display(greeting)

// Test float return
var area = calculate_area(5)
display("Area: ")
display(area)

// Test boolean return
var adult = is_adult(20)
display("Is adult: ")
display(adult)

// Test nested function calls
var nested_result = add_numbers(add_numbers(1, 2), add_numbers(3, 4))
display("Nested result: ")
display(nested_result)

// Test function call in expression
var expression_result = add_numbers(5, 10) * 2
display("Expression result: ")
display(expression_result)

// Test multiple return values in a function
function get_stats(numbers) {
    var sum = add_numbers(numbers, 0)
    var avg = sum / 2
    return avg  // Return the last calculated value
}

var stats = get_stats(10)
display("Stats: ")
display(stats)
