// Function with both for and while loops

function test_loops(n) {
    display("Function with both loops:")
    
    display("For loop in function:")
    for(var k=0; k<n; k=k+1) {
        display(k)
    }
    
    display("While loop in function:")
    var m = 0
    while (m < n) {
        display(m)
        m = m + 1
    }
}

test_loops(3)
